#!/bin/sh

./GO-server

sleep 2

global_param="--args --new-window --disable-popup-blocking --nfirst-run --use-gl --enable-accelerated-compositing --allow-file-access-from-files --disable-session-crashed-bubble --allow-running-insecure-content"

google-chrome $global_param  --window-size=1920,1080 --app=https://localhost:9090/display.html\?clientID=0  &
sleep 1
google-chrome $global_param  --window-position=0,0 https://localhost:9090/audioManager.html  &
sleep 1
google-chrome $global_param  --window-position=0,0 https://localhost:9090  &



