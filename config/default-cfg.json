/*
	default configuration of the server - Mac OS X, and Linux
*/
{
	name: "mysite",
	host: "localhost",
	port: 9090,
	index_port: 9292,
	background: {
		color: "#333333",
		watermark: {
			svg: "images/sage2.svg",
			color: "rgba(255, 255, 255, 0.5)"
		}
	},
	ui: {
		clock: 12,
		show_version: true,
		show_url: true,
	},
	resolution: {
		width: 1920,
		height: 1080
	},
	layout: {
		rows: 1,
		columns: 1
	},
	displays: [
		{
			row: 0,
			column: 0
		}
	],
	alternate_hosts: [
		"127.0.0.1"
	],
	remote_sites: [
	],
	apis: {
		libs: {
			jquery:  "//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min",
			d3web:   "//cdnjs.cloudflare.com/ajax/libs/d3/3.5.5/d3.min",
			d3:      "/lib/d3.v3.min",
			threejs: "/lib/three.min"
		}
	}
}
