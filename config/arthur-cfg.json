/*
	default configuration of the server - Windows
*/
{
	name: "Endeavour",
	host: "nishimoto.evl.uic.edu",
	port: 9090,
	index_port: 9292,
	background: {
		color: "#333333",
		watermark: {
			svg: "images/EVL-LAVA.svg",
			color: "rgba(255, 255, 255, 0.5)"
		}
	},
	ui: {
		clock: 12,
		show_version: false,
		show_url: true,
		maxWindowWidth: 8192,
		maxWindowHeight: 8192,
		noDropShadow: true,
		//widgetControlSize: 20,
		auto_scale_ui: true,
		calculate_viewing_distance: false,
		reload_wallui_on_refresh: true
	},
	dimensions: {
		// dimensions of one tile (can be overriden in displays section)
		tile_width:  0.646,  // in meter, pixel area
		tile_height: 1.093,  // in meter, pixel area
		tile_borders: [ 0.002, 0.002, 0.002, 0.002 ], // mullions in meter, left, right, bottom, top
		// prefered or common viewing distance to calculate UI sizes
		viewing_distance: 1.0668	// in meter
	},
	resolution: {
		width: 2560,
		height: 1600
	},
	layout: {
		rows: 1,
		columns: 1
	},
	displays: [
		{
			row: 0,
			column: 0
		}
	],
	alternate_hosts: [
		"127.0.0.1"
	],
	remote_sites: [
		{
			name: "Cyber-Commons",
			host: "inferno.evlrn.uic.edu",
			port: 443,
			secure: true
		},
		{
			name: "CAVE2",
			host: "lyra.evl.uic.edu",
			port: 443,
			secure: true
		},
		{
			name: "CAVE2-Wall",
			host: "orion.evlrn.uic.edu",
			port: 443,
			secure: true
		}
	],
	// for experimental features: true/false
	experimental: {
		webbrowser: false,  // enable the awesomium module
	
		omicron: // enable omicron input module
		{
			// Standard 'SAGE' connection
			// SAGE listens for a sageinputserver to stream events
			useSageInputServer: true,
			dataPort: 30015,
			
			debug: false,
			
			// Touch gestures
			touchOffset: [ 0, 0 ], // in pixels
			zoomGestureScale: 520,
			acceleratedDragScale: 0,
			
			// Additional 'CAVE2' type connection
			// SAGE connects to an oinputserver to get events
			useOinputserver: false,
			inputServerIP: "cave2tracker.evl.uic.edu",
			msgPort: 28000
		}
	},
	dependencies: {
		ImageMagick: "C:/Program Files/ImageMagick-6.8.9-Q16/",
		FFMpeg: "C:/Dev/ffmpeg-win64-shared/bin/"
    }
}
