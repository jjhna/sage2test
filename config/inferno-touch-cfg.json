{
	name: "Inferno",
	host: "inferno.evl.uic.edu",
	port: 9090,
	index_port: 9292,
	background: {
		color: "#333333",
		watermark: {
			svg: "images/EVL-LAVA.svg",
			color: "rgba(255, 255, 255, 0.5)"
		}
	},
	ui: {
		clock: 12,
		show_version: true,
		show_url: true,
        maxWindowWidth: 8192,
        maxWindowHeight: 8192,
        noDropShadow: true,
		auto_scale_ui: true
	},
	resolution: {
		width: 8160,
		height: 2304
	},
	dimensions: {
		// dimensions of one tile (can be overriden in displays section)
		tile_width:  6.16,  // in meter, pixel area
		tile_height: 1.73,  // in meter, pixel area
		tile_borders: { left: 0.004, right: 0.002, bottom: 0.002, top: 0.004 }, // mullions in meter
		// prefered or common viewing distance to calculate UI sizes
		//viewing_distance: 0.5  // in meter (touchscreen user)
		//viewing_distance: 1.8  // in meter (presenter user)
		viewing_distance: 4.8  // in meter (door row user)
	},
	layout: {
		rows: 1,
		columns: 1
	},
	displays: [
		{
			row: 0,
			column: 0
		}
	],
	alternate_hosts: [
		"127.0.0.1"
	],
	remote_sites: [
	],
	experimental: {
		omicron: {
			// Default SAGE2 input connection
			// SAGE listens for a sageinputserver to stream events
			enable: true,
			//host: "131.193.76.121",
			dataPort: 30005,
			
			debug: false,
			
			// Touch gestures
			gestureDebug: true,
			touchOffset: [ 0, -20 ], // in pixels
			zoomGestureScale: 5,
			acceleratedDragScale: 2,
			
			// Alternate input connection
			// Note if the following is enabled the server will attempt
			// to connect to the specified Omicron oinputserver
			// (By default the server listens for an Omicron sageinputserver to connect to it)
			useOinputserver: false,
			inputServerIP: "131.193.76.94",
			//inputServerIP: "131.193.183.207",
			msgPort: 28000
		}
	},
	dependencies: {
		ImageMagick: "C:/Program Files/ImageMagick-6.9.2-Q16/",
		FFMpeg: "C:/Dev/ffmpeg-win64-shared/bin/"
    }
}
