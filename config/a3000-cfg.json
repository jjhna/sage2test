	],
	remote_sites: [
        {
            "name": "Vroom",
            "host": "137.110.116.15",
            "port": 9090
        }
 	],
	ui: {
		// clock setting: 12-hour or 24-hour
		clock: 12,
		show_version: true,
		show_url:     true,
		auto_hide_ui: true,
