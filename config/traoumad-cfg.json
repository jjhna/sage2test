/*
	configuration for traoumad - luc's machine
*/
{
		// hostname of the web server
	host: "traoumad.evl.uic.edu",
		// port of the HTTPS server: 443 for default
	port: 443,
		// port of the HTTP public page
	index_port: 80,
	background: {
                color: "#585757",
                image: "images/background/dbgrid.png",
                style: "tile",
                "watermark": {
                        "svg": "images/EVL-logo.svg",
                        "color": "rgba(255, 255, 255, 0.2)"
                },
                "clip": true
	},
	ui: {
		clock: 24,
		show_url: true,
		show_version: true,
		logo: "watermark"
	},
	resolution: {
		width: 3840,
		height: 1080
	},
		// for experimental features: true/false
	experimental: {
		webbrowser: false  // enable the awesomium module
	},
	layout: {
		rows: 1,
		columns: 1
	},
	displays: [
		{
			ID: 0,
			row: 0,
			column: 0
		}
	],
	alternate_hosts: [
		"localhost",
		"127.0.0.1"
	],
	remote_sites: [
                {
                        name: "Mesaverde",
                        host: "mesaverde.evl.uic.edu",
                        port: 443
                },
                {
                        name: "Cybercommons",
                        host: "iridium.evl.uic.edu",
                        port: 443
                },
                {
                        name: "IceWall",
                        host: "thor.evl.uic.edu",
                        port: 9090
                },
                {
                        name: "CAVE2",
                        host: "lyra.evl.uic.edu",
                        port: 9090
                }
	]
}
