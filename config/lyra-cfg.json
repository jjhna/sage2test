{
	"host": "lyra.evl.uic.edu", // hostname of the web server
	"port": 443, // port of the HTTPS server: 443 for default
	"index_port": 80, // port of the HTTP public page: 80 for default
	"background": {
		"color": "#333333", // background color: used if no image or if image has transparency
		"image": "images/background/chicago-pano-october-2011-bw.jpg",
		"style": "stretch", // stretch image to fit entire large display
		"clip": true // clip the viewport on each display
	},
	"ui": {
		"clock": 12,
		"show_url": true,
		"show_version": true
	},
	"resolution": { // resolution of each display
		"width": 1366,
		"height":  1536
	},
	// for experimental features: true/false
	experimental: {
		"webbrowser": false,  // enable the awesomium module
		
		"omicron": // enable omicron input module
		{
			// Standard 'SAGE' connection
			// SAGE listens for a sageinputserver to stream events
			enable: true,
			dataPort: 20015,
			
			// Additional 'CAVE2' type connection
			// SAGE connects to an oinputserver to get events
			useOinputserver: true,
			inputServerIP: "cave2tracker.evl.uic.edu",
			msgPort: 28000
		}
	},
