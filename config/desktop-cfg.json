/*
	default configuration of the server
*/
{
		// hostname of the web server
	host: "localhost",
		// port of the HTTPS server: 443 for default
	port: 9090,
		// port of the HTTP public page
	index_port: 9292,
	background: {
		// background color
		color: "#333333",
	},
	ui: {
		// clock setting: 12-hour or 24-hour
		clock: 12,
		show_version: true,
		show_url: true,
		// auto-hide the wall UI (top bar, application bar, ...)
		auto_hide_ui: false,
		// delay in seconds
		auto_hide_delay: 30,
		// min/max window dimensions
		//    default: between 8% and 120% wall width
		//             between 8% and 120% wall height
		minWindowWidth:  220,
		minWindowHeight: 120,
		maxWindowWidth:  2048,
		maxWindowHeight: 2048
	},
	resolution: {
		width: 1200,
		height: 900
	},
		// for experimental features: true/false
	experimental: {
		"webbrowser": false  // enable the awesomium module
	},
	layout: {
		rows: 1,
		columns: 2
	},
	displays: [
		{
			ID: 0,
			row: 0,
			column: 0
		},
		{
			ID: 1,
			row: 0,
			column: 1
		},
	],
	alternate_hosts: [
		"127.0.0.1"
	],
	remote_sites: [
	]
}
