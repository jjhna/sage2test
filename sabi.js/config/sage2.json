{
	"global": {
		"security"    : "true",
		"server_port" : "10000", 
		"tcp_port"    : "11000"
	},
	"main": {
		"header" : "<h4>SAGE2 Control Interface</h4>",
		"footer" : "<h4>SAGE2 Control Interface</h4>",
		"image" : "images/sage2.jpg",
		"image_style" : "width=\"90%\" style=\"max-width:450px;margin: 0 auto;\"",
		"pages" : [ "Page1" ]
	},
	"actions": {
		"sage2-on":          { "script":  "scripts\\sage2_on.bat" },
		"sage2-off":         { "command": "Taskkill /IF \"WindowTitle eq npm\" /F" },
		"edit-config":       { "editor":  "~/Documents/SAGE2_Media/config/default-cfg.json" },
		"edit-form":         { "openurl":  "form.html?action=edit-config" },

		"access":        { "command": "start notepad" },
		"admin":         { "command": "start notepad" },

		"notepad-on":        { "command": "start notepad" },
		"notepad-off":       { "command": "Taskkill /IM notepad.exe /F" },
		"firefox-on":        { "command": "start firefox" },
		"firefox-off":       { "command": "Taskkill /IM firefox.exe /F" }
	},

	"Page1" : {
		"title" : "Page1 setup",
		"navbar" : "true",
		"groups" : [ "group1", "group2"],
		"group1" : { 
			"title": "Launch SAGE2",
			"image": "images/display.png",
			"actions": [
				{"title": "Start meeting", "action": "sage2-on" },
				{"title": "Close meeting", "action": "sage2-off", "theme":"a"}
			]
		},

		"group2" : {
			"title": "Configure SAGE2",
			"image": "images/settings.png",
			"actions": [
				{"title": "Wall configuration - basic", "action": "edit-form", "theme":"a" },
				{"title": "Wall configuration - expert", "action": "edit-config", "theme":"a" },
				{"title": "Meeting access", "action": "access", "theme":"a" },
				{"title": "Admin password", "action": "admin",  "theme":"a"}
			]
		}

	}
}
